@model IEnumerable<Hospital>

@{
    ViewData["Title"] = "List of Hospitals";
}

@{
    Layout = "~/Views/Shared/_Layout3Admin.cshtml"; // Replace with the actual path to your layout
}


<div class="row">
    <div class="col-md-8 offset-md-2">

        <h4 class="center">List of Hospitals</h4>

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.HId)</th>
                    <th>@Html.DisplayNameFor(model => model.HospitalName)</th>
                    <th>@Html.DisplayNameFor(model => model.Location)</th>


                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.HId)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.HospitalName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Location)
                        </td>

                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="DocCreate" asp-controller="Hospital" asp-route-id="@item.HId"><i class="bi bi-pencil-square"></i>Add a Doctor </a> |
                            <a class="btn btn-outline-info" asp-action="ViewDocs" asp-controller="Hospital" asp-route-id="@item.HId"><i class="bi bi-eye"></i>View Doctors</a> |
                           
                        </td>


                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>
