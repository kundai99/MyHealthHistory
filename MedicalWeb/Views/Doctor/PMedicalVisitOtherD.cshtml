@model IEnumerable<Doctorinfo>

@{
    ViewData["Title"] = "List of other doctors patient has seen ";
}

@{
    Layout = "~/Views/Shared/_Layout3Doctor.cshtml"; // Replace with the actual path to your layout
}

<div class="row">
    <div class="col-md-8 offset-md-2">
       
        @if (Model.Count() ==0)
        {
            <div>
                <h2 class="center">Patient Has Seen No Other Doctor In System</h2>
            </div>
        }
        else
        {
            <h4 class="center">List of Doctors Patient has seen</h4>
            <table class="table">
                <thead>
                    <tr class="text-center">
                        <th>@Html.DisplayNameFor(model => model.FName)</th>
                        <th>@Html.DisplayNameFor(model => model.SName)</th>
                        <th>@Html.DisplayNameFor(model => model.ProfessionalNum)</th>
                        <th>@Html.DisplayNameFor(model => model.Speciality)</th>
                        <th>@Html.DisplayNameFor(model => model.HospitalName)</th>


                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.FName)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.SName)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.ProfessionalNum)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.Speciality)
                            </td>
                            <td class="align-middle">
                                @Html.Display("Medical Center")
                            </td>

                            <td class="align-middle">

                                <a class="btn btn-outline-info" asp-action="PMedicalVisit2" asp-route-id="@item.Did"><i class="bi bi-eye"></i>View Patient Medical Visits with this Doctor </a> |
                            

                            </td>


                        </tr>
                    }
                </tbody>

            </table>
        }

        <a class="btn btn-outline-info" asp-action="Index" asp-controller="Doctor" ><i class="bi bi-eye"></i>Back to Patients </a>
    </div>
</div>