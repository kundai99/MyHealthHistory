@model Tempdata2
@{
    ViewData["Title"] = "Add a new Doctor";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add a New user</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">

                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Surname" class="control-label"></label>
                        <input asp-for="Surname" class="form-control" />
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ProfessionalNum" class="control-label"></label>
                        <input asp-for="ProfessionalNum" class="form-control" />
                        <span asp-validation-for="ProfessionalNum" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Speciality" class="control-label"></label>
                        <input asp-for="Speciality" class="form-control" />
                        <span asp-validation-for="Speciality" class="text-danger"></span>
                    </div>

                    
                    <div class="form-group">
                        <label for="Schools">Select your school</label>
                        <select class="form-control" id="Hospital" name="Hospital">
                            <option value="">Select</option>
                            @foreach (var item in Model.Hospitals)
                            {
                                <option value="@item.HId"> @item.HospitalName</option>
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>