@model IEnumerable<MedicalVisit>

@{
    ViewData["Title"] = "List of Medical Visits";
}

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.MId)</th>
                    <th>@Html.DisplayNameFor(model => model.Date)</th>


                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.MId)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>

                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.MId"><i class="bi bi-pencil-square"></i>Details </a> |
                            <a class="btn btn-outline-primary" asp-action="ViewLabReports" asp-controller="Doctor" asp-route-id="@item.MId"><i class="bi bi-pencil-square"></i>View Lab Reports </a>
                        </td>


                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>
